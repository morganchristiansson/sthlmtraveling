<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content" android:orientation="vertical">

	<TextView android:text="@string/to"
        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
	<LinearLayout
		android:layout_width="fill_parent" android:layout_height="wrap_content">
	    <AutoCompleteTextView android:id="@+id/text"
			android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_weight="1"
			android:hint="@string/to"
			android:dropDownWidth="fill_parent"
			android:singleLine="true"
	        android:imeOptions="actionGo"/>
        <Button android:id="@+id/go" android:text="@string/go"
        	 android:layout_width="wrap_content" android:layout_height="wrap_content"/>
	</LinearLayout>

	<Button android:text="@string/pick_contact" android:id="@+id/Button01" android:layout_width="fill_parent" android:layout_height="wrap_content" />

	<TextView android:text="@string/recent_locations"
	    android:layout_width="wrap_content" android:layout_height="wrap_content"/>
	<ListView android:id="@+id/recent"
		android:layout_width="wrap_content" android:layout_height="wrap_content"/>
</LinearLayout>
